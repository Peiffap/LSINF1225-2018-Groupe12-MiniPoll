<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.uclouvain.lsinf1225.musicplayer">

    <application
        android:name="be.uclouvain.lsinf1225.musicplayer.MusicPlayerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="be.uclouvain.lsinf1225.musicplayer.activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.uclouvain.lsinf1225.musicplayer.activity.MainActivity"
            android:label="@string/main_activity_title" />
        <activity
            android:name="be.uclouvain.lsinf1225.musicplayer.activity.ShowListActivity"
            android:label="@string/show_list_activity_title"/>
        <activity
            android:name="be.uclouvain.lsinf1225.musicplayer.activity.SearchActivity"
            android:label="@string/search_activity_title" />
        <activity
            android:name="be.uclouvain.lsinf1225.musicplayer.activity.ShowDetailsActivity"
            android:label="@string/show_details_activity_title"/>
        <activity
            android:name="be.uclouvain.lsinf1225.musicplayer.activity.PlayerActivity"
            android:label="@string/player_activity_title"/>
    </application>

</manifest>
